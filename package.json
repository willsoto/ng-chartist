{
  "name": "ng-chartist",
  "version": "5.0.0",
  "description": "Chartist component for Angular",
  "keywords": [
    "angular",
    "chartist",
    "charting",
    "charts"
  ],
  "homepage": "https://github.com/willsoto/ng-chartist",
  "bugs": {
    "url": "https://github.com/willsoto/ng-chartist/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/willsoto/ng-chartist.git"
  },
  "license": "Apache-2.0",
  "author": "Will Soto",
  "files": [
    "**/*.{js,ts,json,map}"
  ],
  "scripts": {
    "build": "npm run build:lib && npm run build:demo",
    "build:demo": "ng build ng-chartist-demo --configuration production",
    "build:lib": "copyfiles package.json README.md projects/ng-chartist && ng build ng-chartist",
    "e2e": "ng e2e",
    "gh-pages": "git checkout gh-pages && git merge main && npm run build && npm run doc && mv dist/ng-chartist-demo demo",
    "postgh-pages": "git add . && git commit -m 'chore(*): build demo and docs' && git push && git checkout main",
    "lint": "npm run lint:lib && npm run lint:demo",
    "lint:demo": "ng lint ng-chartist-demo",
    "lint:lib": "ng lint ng-chartist",
    "ng": "ng",
    "pack": "cd dist/ng-chartist-lib && npm run pack",
    "package": "npm run build:lib && npm run pack",
    "start": "ng serve ng-chartist-demo",
    "test": "ng test ng-chartist --watch=false --browsers=ChromeHeadless",
    "doc": "compodoc projects/ng-chartist/src/lib -p projects/ng-chartist/tsconfig.lib.json -d docs",
    "prerelease": "npm run build:lib",
    "release": "semantic-release",
    "prepare": "husky install",
    "format": "prettier . --write",
    "checkstyle": "prettier . --check"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,js,md,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "semi": true,
    "singleQuote": true
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.0",
    "@angular-eslint/builder": "~12.4.1",
    "@angular-eslint/eslint-plugin": "~12.4.1",
    "@angular-eslint/eslint-plugin-template": "~12.4.1",
    "@angular-eslint/schematics": "~12.4.1",
    "@angular-eslint/template-parser": "~12.4.1",
    "@angular/animations": "~12.2.0",
    "@angular/cli": "~12.2.0",
    "@angular/common": "~12.2.0",
    "@angular/compiler": "~12.0.2",
    "@angular/compiler-cli": "~12.0.2",
    "@angular/core": "~12.2.0",
    "@angular/forms": "~12.2.0",
    "@angular/language-service": "~12.2.0",
    "@angular/platform-browser": "~12.2.0",
    "@angular/platform-browser-dynamic": "~12.2.0",
    "@angular/router": "~12.2.0",
    "@commitlint/config-conventional": "~13.1.0",
    "@compodoc/compodoc": "~1.1.11",
    "@semantic-release/changelog": "~5.0.1",
    "@types/chartist": "~0.11.0",
    "@types/jasmine": "3.9.0",
    "@types/jasminewd2": "~2.0.9",
    "@types/node": "~16.9.0",
    "@typescript-eslint/eslint-plugin": "~4.28.2",
    "@typescript-eslint/parser": "~4.28.2",
    "chartist": "~0.11.4",
    "chartist-plugin-tooltips-updated": "~0.1.4",
    "commitlint": "~13.1.0",
    "copyfiles": "~2.4.1",
    "core-js": "~3.17.3",
    "eslint": "~7.26.0",
    "eslint-config-prettier": "~8.3.0",
    "eslint-plugin-import": "~2.24.2",
    "eslint-plugin-jsdoc": "~36.1.0",
    "eslint-plugin-prefer-arrow": "~1.2.3",
    "husky": "~7.0.0",
    "jasmine-core": "~3.9.0",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.3.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-jasmine": "~4.0.1",
    "karma-jasmine-diff-reporter": "~2.0.1",
    "karma-mocha-reporter": "~2.2.5",
    "lint-staged": "~11.1.2",
    "ng-packagr": "~12.0.2",
    "prettier": "~2.4.0",
    "prettier-plugin-organize-imports": "~2.3.2",
    "prettier-plugin-packagejson": "~2.2.11",
    "protractor": "~7.0.0",
    "rxjs": "~7.3.0",
    "semantic-release": "~17.4.7",
    "standard-version": "~9.3.0",
    "ts-node": "~10.2.0",
    "tslib": "~2.2.0",
    "typescript": "4.2.4",
    "zone.js": "~0.11.4"
  },
  "peerDependencies": {
    "@angular/common": ">=12.0.2",
    "@angular/core": ">=12.0.2",
    "@types/chartist": "^0.11.0",
    "chartist": ">=0.11.4"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "dist/ng-chartist-lib"
        }
      ],
      "@semantic-release/changelog"
    ]
  },
  "volta": {
    "node": "14.17.0",
    "npm": "7.14.0"
  }
}
